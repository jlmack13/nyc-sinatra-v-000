<h1>Create a New Figure:</h1>
<form action="/figures" method="post">
  <h2>Name</h2>
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br>
  <br>
  <h2>Title</h2>
  <label>Choose an Existing Title:</label>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
  <% end %>
  <br>
  <br>
  <label>Or, Create a New Title: </label>
  <input type="text" name="title[name]" id="new_title">
  <br>
  <br>
  <h2>Landmarks</h2>
  <label>Choose Landmarks:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
  <% end %>
  <br>
  <br>
  <label>Or, Create a New Landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <br>
  <input type="submit" value="Create New Figure">
</form>
